<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VC.Oboryd">
  <ContentView.Content>
        <Frame CornerRadius="15" BackgroundColor="#ed6e43">
            <Grid>
                 <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                </Grid.GestureRecognizers>
                <StackLayout>
                    <Label Text="№323324343" 
                           x:Name="Equipment_number"
                           TextColor="White"/>
                    <Label
                        x:Name="Equipment_name"
                        Text="Видеокарта Geforce Gtx 1050ti" FontSize="Medium" TextColor="White"/>
                    
                    <Label 
                        x:Name="Equipment_specific"
                        Text="Характеристики : " TextColor="White"/>
                    <Image Source="round_edit_white_24dp.png" HorizontalOptions="EndAndExpand"/>
                </StackLayout>
                <StackLayout>
                    <Label Text="303"
                           x:Name="Cab"
                           TextColor="White" 
                           HorizontalOptions="EndAndExpand"
                           FontAttributes="Bold"/>
                    
                </StackLayout>
            </Grid>
        </Frame>
    </ContentView.Content>
</ContentView>